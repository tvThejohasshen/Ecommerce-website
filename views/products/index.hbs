{{extends "base"}}
{{#block "content"}}
<h1>All Products</h1>

<table class = "table">
    <thead>
        <th>
            Product ID
            </th>
            <th>
                Name
                </th>
                <th>
                    Cost
                    </th>
                    <th>
                        <Description>
                            </th>
                            </thead>
                            {{each products}}
                            <tr>
                                <td>
                                    {{this.id}}
                                    </td>
                                    <td>
                                        {{this.name}}
                                        </td>
                                        <td>
                                            {{this.cost}}
                                            </td>
                                            <td>
                                                {{this.description}}
                                                </td>
                                                </tr>
                                                {{/each}}
                                                </table>
                                                {{/block}}
                                                {{/extends}}
